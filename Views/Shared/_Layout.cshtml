    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/prism.css" />
    <link
      rel="icon"
      class="js-site-favicon"
      type="image/png"
      href="~/img/JP-LOGO.svg"
    />
     <script
      src="https://kit.fontawesome.com/5db21ba9c6.js"
      crossorigin="anonymous"
    ></script>
</head>

  <body class="d-flex flex-column h-100" >
    <!-- === Nav Section === -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top">
      <div class="container-fluid">
        <img src="~/img/JP-LOGO.svg" alt="Jacob Phillips Logo" height="55" />
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">GeoSphere Generator</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarCollapse"
          aria-controls="navbarCollapse"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav me-auto mb-2 mb-md-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home"  asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-area="" asp-controller="Circle"  asp-action="App">The App</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Code">The Code</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" target="_blank" href="https://github.com/jacobrphillips/GeoSphereGenerator">Git Repo</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" target="_blank" href="#">About</a>
              <!--portfolio link-->
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- === Main Section === -->
    
        <main role="main" class="flex-shrink-0 flex-grow-1" >
            @RenderBody()
        </main>
 

    <!-- === Footer Section === -->
    <footer class="footer mt-auto py-3"> 
      <div class="container-fluid">
        <div class="row row-cols-1 row-cols-lg-3 gy-2">
          <div
            class="col order-last order-lg-first text-light d-flex align-items-center justify-content-left"
          >
            <div>
              <span class="text-muted">&copy;2023</span> Jacob Phillips |
              0123phillips@gmail.com
            <div style="font-size: small;">
              Made with C#/.NET and ❤️
            </div>
            </div>
          </div>
          <div
            class="col d-flex align-items-center justify-content-start justify-content-lg-center"
          >
            <img src="~/img/JP-LOGO.svg" alt="Jacob Phillips Logo" height="55" />
          </div>
          <div
            class="col d-flex align-items-center justify-content-start justify-content-lg-end"
          >
            <div class="row">
              <div class="col social">
                <a href="https://www.linkedin.com/in/jacobphillips-dev/" target="_blank"
                  ><i class="fab fa-linkedin fa-2x"></i
                ></a>
              </div>
              <div class="col social">
                <a href="https://github.com/jacobrphillips" target="_blank"
                  ><i class="fab fa-github fa-2x"></i
                ></a>
              </div>
              <div class="col social">
                <a href="#" target="_blank"
                  ><i class="fab fa-youtube fa-2x"></i
                ></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
      crossorigin="anonymous"
    ></script>
       <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/prism.js"></script>
    <script>
      Prism.plugins.NormalizeWhitespace.setDefaults({
        "remove-trailing": true,
        "remove-indent": true,
        "left-trim": true,
        "right-trim": true,
      });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
  </body>
</html>
